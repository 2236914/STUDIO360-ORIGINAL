# External OCR providers
# STUDIO360 Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/studio360
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/studio360

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_ORIGIN_PROD=https://studio360.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AI Services
AI_SERVICE_URL=http://localhost:3002
OCR_CONFIDENCE_THRESHOLD=0.8

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# External APIs (if needed)
GOOGLE_CLOUD_API_KEY=your-google-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key 

# Supabase (PostgreSQL)
# Project Settings > API
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# OCR / PDF tooling (Windows)
# Optional absolute paths if not discoverable in PATH; backend will pass these to the Python processor.
# Example Tesseract install path:
# TESSERACT_PATH=C:\\Program Files\\Tesseract-OCR\\tesseract.exe
# Example Poppler bin path (auto-downloaded in repo by the installer step):
# POPPLER_PATH=c:\\Users\\santi\\Documents\\STUDIO360\\backend\\python\\poppler\\extracted\\poppler-25.07.0\\Library\\bin
TESSERACT_PATH=C:\Program Files\Tesseract-OCR
POPPLER_PATH=C:\Program Files\poppler-24.02.0\Library\bin

# n8n Webhook Integration
# Point this to your n8n webhook URL (Production URL recommended)
# Example (test): http://localhost:5678/webhook/ai-assistant
N8N_WEBHOOK_URL=

# Optional: header-based auth sent with webhook calls
#N8N_WEBHOOK_HEADER_NAME=X-API-Key
#N8N_WEBHOOK_HEADER_VALUE=replace_me

# Optional: basic auth for n8n webhook
#N8N_WEBHOOK_BASIC_USER=
#N8N_WEBHOOK_BASIC_PASS=

# Optional: global timeout for webhook calls (ms)
#N8N_GLOBAL_TIMEOUT_MS=45000

# Optional: friendly assistant fallback message if n8n is unreachable
#ASSISTANT_FALLBACK_MESSAGE=Assistant is warming up. Please try again in a moment.

# Direct LLM Fallback (OpenAI-compatible). Optional, enables general Q&A like ChatGPT/Gemini.
# Set API key to turn it on. Supported providers with OpenAI-compatible endpoints:
# - OpenAI (default base)
# - OpenRouter (set LLM_PROVIDER=openrouter)
