# External OCR providers
# Google Vision API
GOOGLE_CLOUD_API_KEY=
# OCR.space API
OCRSPACE_API_KEY=
# STUDIO360 Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/studio360
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/studio360

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_ORIGIN_PROD=https://studio360.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AI Services
AI_SERVICE_URL=http://localhost:3002
OCR_CONFIDENCE_THRESHOLD=0.8

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# External APIs (if needed)
GOOGLE_CLOUD_API_KEY=your-google-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key 

