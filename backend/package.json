{
  "name": "studio360-backend",
  "version": "1.0.0",
  "description": "Backend API for STUDIO360 bookkeeping system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "backup:db": "bash ../tools/backup/backup-db.sh || tools\\backup\\backup-db.bat",
    "backup:uploads": "bash ../tools/backup/backup-uploads.sh || tools\\backup\\backup-uploads.bat",
    "backup:all": "npm run backup:db && npm run backup:uploads"
  },
  "keywords": [
    "api",
    "backend",
    "bookkeeping",
    "studio360",
    "express",
    "mongodb"
  ],
  "author": "STUDIO360 Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.10",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "pdfkit": "^0.15.0"
    ,
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sippinsalmon/STUDIO360.git"
  },
  "bugs": {
    "url": "https://github.com/sippinsalmon/STUDIO360/issues"
  },
